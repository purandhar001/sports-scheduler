<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Scheduler</title>
    <style>
        body{
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: antiquewhite;
        }
    </style>
</head>
<body>

<div class="container">

    <nav>
        <a href="/">Dashboard</a> | 
        
    </nav>
    <hr>

    <h1>My Sessions</h1>

    <h2>Sessions I've Created</h2>
        <% if (createdSessions.length > 0) { %>
            <ul>
                <% createdSessions.forEach(session => { %>
                    <li>
                        <strong><%= session.sport?.name %></strong> on <%= session.dateTime?.toLocaleString() %>
                        - Players: <%= session.playersJoined.length %> / <%= session.playersNeeded %>
                        
                        <% if (session.status === 'active') { %>
                            <form action="/sessions/<%= session._id %>/cancel" method="POST" style="margin-top: 10px;">
                                <input type="text" name="reason" placeholder="Reason for cancellation" required>
                                <button type="submit">Cancel Session</button>
                            </form>
                        <% } else { %>
                            <p><strong>Status:</strong> Cancelled</p>
                        <% } %>
                    </li>
                    <hr>
                <% }) %>
            </ul>
        <% } else { %>
            <p>You haven't created any sessions yet. <a href="/sessions/new">Create one!</a></p>
        <% } %>

    <hr>

    <h2>Sessions I've Joined</h2>
    <% if (joinedSessions.length > 0) { %>
        <ul>
            <% joinedSessions.forEach(session => { %>
                <li>
                    <strong><%= session.sport?.name %></strong> on <%= session.dateTime?.toLocaleString() %>
                    (Created by: <%= session.createdBy?.name %>)
                    - Players: <%= session.playersJoined.length %> / <%= session.playersNeeded %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>You haven't joined any sessions yet. <a href="/">Find one on the dashboard!</a></p>
    <% } %>
    <hr>
    <a href="/auth/logout">Logout</a>

</div>

</body>
</html>


<%- include('partials/header') %>

<div class="container">

    <nav>
        <p>Hi, <%= user.name %> (Admin)</p>
        
    </nav>

    <hr>

    <h1>Admin Dashboard</h1>
    <p>Manage sports, view reports, and oversee all sessions.</p>

    <div>
        <h2>Admin Tools</h2>
        <ul>
            <li><a href="/admin/sports">Manage Sports</a></li>
        </ul>
    </div>
    <a href="/sessions/new"><h3>+ Create a New Session</h3></a>

    <hr>
    <h2>Upcoming Sessions</h2>
    <% if (sessions.length > 0) { %>
        <ul>
            <% sessions.forEach(session => { %>
                <li>
                    <strong><%= session.sport?.name || '[Deleted Sport]' %></strong> on 
                    
                    <%= session.dateTime?.toLocaleString() || '[No Date Set]' %> 
                    
                    at <%= session.venue %>
                    (Created by: <%= session.createdBy?.name || '[Deleted User]' %>)
                    - Players: <%= session.playersJoined.length %> / <%= session.playersNeeded %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No sessions have been created yet. Why don't you create one?</p>
    <% } %>

    <hr>

    <a href="/auth/logout">Logout</a>

</div>

<%- include('partials/footer') %>

<style>
    body{
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: antiquewhite;
    }
</style>
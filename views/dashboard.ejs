<%- include('partials/header') %>


<main class="container">
    <nav class="navbar">
    <h1>
        SportsScheduler
    </h1>
        <div class="navbar-menu">
            <span class="user-name">Hi, <%= user.name %></span>
            
        </div>
    </nav>
    <div class="dashboard-header">
        <h1>Player Dashboard</h1>
        <p>Welcome! Here you can find and join upcoming sessions.</p>
    </div>

    <a href="/sessions/new"><h3>+ Create a New Session</h3></a>

    <hr>
    <h2>Upcoming Sessions</h2>
    <% if (sessions.length > 0) { %>
        <ul>
            <% sessions.forEach(session => { %>
                <li>
                    <strong><%= session.sport.name %></strong> on 
                    <%= session.dateTime.toLocaleString() %> at <%= session.venue %>
                    (Created by: <%= session.createdBy.name %>)
                    - Players: <%= session.playersJoined.length %> / <%= session.playersNeeded %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No sessions have been created yet. Why don't you create one?</p>
    <% } %>
    <a href="/auth/logout" class="logout-link">Logout</a>
</main>
<%- include('partials/footer') %>

<style>
    body{
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: antiquewhite;
    }
</style>